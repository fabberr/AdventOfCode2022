{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++-12 build active file for debugging",
            "command": "/home/linuxbrew/.linuxbrew/bin/g++-12",
            "args": [
                "-std=c++20",
                "-I/home/linuxbrew/.linuxbrew/include/",
                "-DFMT_HEADER_ONLY",
                "-fdiagnostics-color=always",
                "-O0",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}